#!/usr/bin/make -f
# -*- makefile -*-

# Uncomment this to turn on verbose mode.
#export DH_VERBOSE=1
export DH_VIRTUALENV_INSTALL_ROOT=/opt
export PYBUILD_NAME=wlanpi-core
SNAKE=/usr/bin/python3
PACKAGE=$(shell dh_listpackages)
VERSION=$(shell parsechangelog | grep ^Version: | sed -re 's/[^0-9]+([^-]+).*/\1/')
SDIST_DIR=debian/$(PACKAGE)-$(VERSION)
EXTRA_REQUIREMENTS=--upgrade-pip-to 22.3 --preinstall "setuptools==65.5.0" --preinstall "wheel==0.37.1"
DBUSPYTHON_SPEC=$(shell grep dbus-python== endpoint_requires.txt | cut -f1 -d ",")
DH_VENV_DIR=debian/$(PACKAGE)$(DH_VIRTUALENV_INSTALL_ROOT)/$(PACKAGE)
DH_VENV_ARGS=--builtin-venv --python ${SNAKE} $(EXTRA_REQUIREMENTS) \
			--extra-pip-arg=--progress-bar=on

%:
	dh $@ --with python3,python-virtualenv --buildsystem=pybuild

.PHONY: override_dh_virtualenv override_dh_installexamples 

override_dh_installexamples:
	dh_installexamples -A -X__pycache__

override_dh_virtualenv:
	dh_virtualenv $(DH_VENV_ARGS)
	$(DH_VENV_DIR)/bin/python $(DH_VENV_DIR)/bin/pip install -I --use-feature no-binary-enable-wheel-cache dbus-python $(DBUSPYTHON_SPEC)

# $(DH_VENV_DIR)/bin/python $(DH_VENV_DIR)/bin/pip install -I --no-binary dbus-python $(DBUSPYTHON_SPEC)
