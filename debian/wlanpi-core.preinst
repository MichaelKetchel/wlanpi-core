#!/bin/bash
# see: dh_installdeb(1)
# dh_installdeb will replace this with shell code automatically
# generated by other debhelper scripts.

set -e

#DEBHELPER#

# add service account if required
case "$1" in
  install|upgrade)
  
  if ! cat /etc/passwd | grep -q wlanpi-core; then
    adduser --system wlanpi-core --no-create-home --disabled-password --shell /bin/false
  fi
esac

exit 0